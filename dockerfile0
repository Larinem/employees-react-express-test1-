FROM node:latest

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

WORKDIR /app/client

RUN npm install

WORKDIR /app

RUN mv .env.local .env

RUN npx prisma generate

RUN npx prisma migrate dev

COPY prisma/schema.prisma ./prisma/

RUN /app/client

RUN npm run build

RUN /app

ENV NODE_ENV=production

EXPOSE 8000

CMD [ "npm", "start" ]