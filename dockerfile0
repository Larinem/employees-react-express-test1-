FROM node:18.16.0

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

WORKDIR /app/client

RUN npm install

WORKDIR /app

RUN mv .env.local .env

RUN npx prisma generate

RUN npx prisma migrate dev

COPY prisma/schema.prisma ./prisma/

WORKDIR /app/client

RUN npm run start

WORKDIR /app

ENV NODE_ENV=production

EXPOSE 8000 3000

CMD [ "npm", "start" ]